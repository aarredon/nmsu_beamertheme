%% color box templates (based on the primary colors)

\newcommand{\crimsonbox}[2]{
\setbeamercolor{uppercol}{fg=white,bg=lccrimson}
\setbeamercolor{lowercol}{fg=black,bg=lcboxfill}
\begin{beamerboxesrounded}[upper=uppercol,lower=lowercol,shadow=true]{
#1 }  #2
\end{beamerboxesrounded} }

\newcommand{\bluebox}[2]{
\setbeamercolor{uppercol}{fg=white,bg=lcblue}
\setbeamercolor{lowercol}{fg=black,bg=lcboxfill}
\begin{beamerboxesrounded}[upper=uppercol,lower=lowercol,shadow=true]{
#1 }  #2
\end{beamerboxesrounded} }

\newcommand{\yellowbox}[2]{
