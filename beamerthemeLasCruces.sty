%% color box templates (based on the primary colors)

\newcommand{\crimsonbox}[2]{
\setbeamercolor{uppercol}{fg=white,bg=nmsucrimson}
\setbeamercolor{lowercol}{fg=black,bg=nmsuboxfill}
\begin{beamerboxesrounded}[upper=uppercol,lower=lowercol,shadow=true]{
#1 }  #2
\end{beamerboxesrounded} }

